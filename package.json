{
    "name": "condenser",
    "version": "0.1.1",
    "preview": true,
    "publisher": "ryeden",
    "author": {
        "name": "Jaroslav Ovtsyn",
        "email": "jvo@ryeden.com"
    },
    "displayName": "Log Condenser",
    "description": "View log files through a foldable text / regular expression filter",
    "categories": [
        "Visualization"
    ],
    "keywords": [
        "log",
        "view",
        "regex",
        "filter",
        "fold"
    ],
    "license": "MIT",
    "markdown": "github",
    "icon": "resources/icon.png",
    "engines": {
        "vscode": "^1.57.0"
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onCommand:condenser.start"
    ],
    "contributes": {
        "commands": [
            {
                "command": "condenser.start",
                "title": "Condense start",
                "when": "editorIsOpen"
            },
            {
                "command": "condenser.collapse.all",
                "title": "Condense collapse",
                "icon": {
                    "light": "./resources/light/collapse-all.png",
                    "dark": "resources/dark/collapse-all.png"
                },
                "when": "condenser.active"
            },
            {
                "command": "condenser.expand.all",
                "title": "Condense expand",
                "icon": {
                    "light": "./resources/light/expand-all.png",
                    "dark": "resources/dark/expand-all.png"
                },
                "when": "condenser.active"
            },
            {
                "command": "condenser.stop",
                "title": "Condense stop",
                "icon": {
                    "light": "./resources/light/stop.png",
                    "dark": "resources/dark/stop.png"
                },
                "when": "condenser.active"
            }
        ],
        "keybindings": [
            {
                "command": "condenser.start",
                "key": "ctrl+'",
                "mac": "cmd+'",
                "when": "editorIsOpen"
            },
            {
                "command": "condenser.prev",
                "key": "up",
                "when": "condenser.active && condenser.inputBox"
            },
            {
                "command": "condenser.next",
                "key": "down",
                "when": "condenser.active && condenser.inputBox"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "condenser.collapse.all",
                    "group": "navigation",
                    "when": "condenser.active"
                },
                {
                    "command": "condenser.expand.all",
                    "group": "navigation",
                    "when": "condenser.active"
                },
                {
                    "command": "condenser.stop",
                    "group": "navigation",
                    "when": "condenser.active"
                }
            ],
            "commandPalette": [
                {
                    "command": "condenser.start",
                    "when": "editorIsOpen"
                },
                {
                    "command": "condenser.collapse.all",
                    "when": "condenser.active"
                },
                {
                    "command": "condenser.expand.all",
                    "when": "condenser.active"
                },
                {
                    "command": "condenser.stop",
                    "when": "condenser.active"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.57.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    },
    "homepage": "https://github.com/ryeden/vscode-condenser/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/ryeden/vscode-condenser.git"
    },
    "bugs": {
        "url": "https://github.com/ryeden/vscode-condenser/issues"
    }
}
